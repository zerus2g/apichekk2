{
  "functions": {
    "api/chk.php": {
      "runtime": "now-php@1.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/chk",
      "destination": "/api/chk.php"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 